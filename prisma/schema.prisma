generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Package {
  id          String     @id @default(uuid())
  name        String
  description String
  price       Float
  duration    Int        // In days
  platforms   Platform[]
  orders      Order[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Platform {
  id          String      @id @default(uuid())
  name        String
  url         String
  icon        String?     // URL to icon or lucide icon name
  accessType  AccessType
  packages    Package[]
  
  // Credentials (only one set per platform/package usually, but simplifying here)
  username    String?
  password    String?
  cookies     String?     @db.Text
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  packageId String
  package   Package     @relation(fields: [packageId], references: [id])
  status    OrderStatus @default(PENDING)
  amount    Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum AccessType {
  CREDENTIALS
  COOKIES
}

enum OrderStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}
